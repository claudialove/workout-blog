<%- include ("partials/header") %>


<div class="ui main text container segment">
    <div class="ui huge header">Edit <%= workout.name %> </div>
    <form class="ui form" action="/workouts/<%=workout._id%>?_method=PUT" method="POST">
        <div class="field">
            <label>Name</label>
            <input type="text" name="workout[name]" value="<%= workout.name %>">
            <div class="field">
                <label>Activity</label>
                <input type="text" name="workout[activity]" value="<%= workout.activity %>">
            </div>
            <div class="field">
                <label>Duration</label>
                <input type="text" name="workout[duration]" value="<%= workout.duration %>">
            </div>
            <div class="field">
                <label>Weights</label>
                <input type="text" name="workout[weights]" value="<%= workout.weights %>">
            </div>
            <div class="field">
                <label>reps</label>
                <input type="text" name="workout[reps]" value="<%= workout.reps %>">
            </div>
            <div class="field">
                <label>Notes</label>
                <textarea name="workout[notes]"><%= workout.notes %></textarea>
            </div>
            <input class="ui pink basic button" type="submit">
    </form>
</div>
</div>

<%- include ("partials/footer") %>